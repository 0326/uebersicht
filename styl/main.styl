html, body
  background: #fff
  color: #152033
  font-family: Ubuntu, Helvetica Neue, Arial, Sans
  font-style: normal
  font-weight: 200
  line-height: 1.4

header, section
  width: 500px
  margin: 0 auto

a, a:link, a:visited
  color: #86585a

  &:hover
    color: #852a2f


header
  display: block
  image: "images/logo.png" 200px 96px
  background-repeat: no-repeat
  background-position: center 30px

  h2
    padding-top: 160px
    font-style: italic
    text-align: center

main
  section
    margin-top: 24px
    display: block

  h1
    border-top: 1px solid #e0e0e0
    font-weight: 300
    font-size: 24px
    padding: 24px 0 8px
    //text-align: center
    font-style: italic

  pre
    margin: 20px 0
    font-family: Ubuntu Mono, Menlo, Currier New, Mono
    border: 1px solid #eee

  ul
    padding: 4px 0 8px 0

  li
    margin: 8px 0
    border-left: 8px solid #ddd
    padding-left: 8px

.download
  text-align: center
  font-size: 0

  a, a:link, a:visited
    font-size: 16px
    text-decoration: none
    padding: 10px 20px
    display: inline-block
    background-color: #ac7a7b
    color: #fff
    border-radius: 2px
    margin-right: 10px

    span
      font-size: 10px

    &:hover
      background-color: #810034

  a.app
    background-color: #c29785

    &:hover
      background-color: #bc6444

.screenshots
  width: 90%
  margin: 16px auto 0
  font-size: 0
  whitespace: nowrap
  padding: 0

  li
    width: 25%
    box-sizing: border-box
    border: 10px solid #fff
    display: inline-block
    margin:0

    img
      width: 100%

#disqus_thread
  width: 500px
  margin: 40px auto 20px auto
  padding-top: 40px
  border-top: 1px solid #e0e0e0



@media only screen and (max-width: 500px)
  body, html
    width: 100%

  header, section, #disqus_thread
    width: 100%
    padding-left: 16px
    padding-right: 16px
    box-sizing: border-box

  .download a
    margin: 10px 0 0 0
    width: 100%
    box-sizing: border-box
