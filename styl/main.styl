@import 'nib'
@import 'lightbox.css'
@import 'highlight.css'

global-reset()


html, body
  background: #fff
  color: #152033
  font-family: Ubuntu, Helvetica Neue, Arial, Sans
  font-style: normal
  font-weight: 300
  line-height: 1.4

header, section
  width: 500px
  margin: 0 auto

a, a:link, a:visited
  color: #86585a
  text-decoration: none
  font-weight: 500

  &:hover
    color: #852a2f
    text-decoration: underline


header
  display: block
  image: "images/logo.png" 200px 96px
  background-repeat: no-repeat
  background-position: center 30px

  h2
    padding-top: 160px
    font-style: italic
    text-align: center

main
  section
    margin-top: 24px
    display: block

  h1
    border-top: 1px solid #e0e0e0
    font-weight: 300
    font-size: 24px
    padding: 24px 0 8px
    //text-align: center
    font-style: italic

  pre
    margin: 20px 0
    font-family: Ubuntu Mono, Menlo, Currier New, Mono
    border: 1px solid #e0e0e0

  ul
    padding: 4px 0 8px 0

  li
    margin: 8px 0
    border-left: 8px solid #ddd
    padding-left: 8px

.download
  text-align: center
  font-size: 0

  a, a:link, a:visited
    font-size: 16px
    font-weight: 300
    padding: 10px 20px
    display: inline-block
    background-color: #ac7a7b
    color: #fff
    border-radius: 2px
    margin-right: 10px

    span
      font-size: 10px

    &:hover
      background-color: #810034
      text-decoration: none

  a.app
    background-color: #c29785

    &:hover
      background-color: #bc6444

.screenshots
  width: 90%
  margin: 16px auto 0
  font-size: 0
  whitespace: nowrap
  padding: 0

  li
    width: 25%
    box-sizing: border-box
    border: 10px solid #fff
    display: inline-block
    margin:0

    img
      width: 100%

.more-info
  h1
    border-color: transparent
    padding-top: 8px

  .badges
    text-align: center
    font-size: 0

    a, a:link, a:visited
      display: inline-block
      font-size: 24px
      line-height: 1
      text-decoration: none
      font-weight: 500
      word-spacing: normal
      margin: 32px 32px
      min-width: 30%
      text-align: left

      h2
        font-size: 14px
        font-weight: 200
        color: #666
        margin-bottom: 4px

  .twitter
    span
      color: #292f33
      font-family: Gotham, Helvetica Neue, Helvetica, Arial, sans-serif
    img
      height: 18px
      width: 22px
      vertical-align: baseline

  .github
    span
      color: #333
      font-family: Helvetica, Arial, freesans, clean, sans-serif
    img
      height: 24px
      width: 24px
      vertical-align: bottom



#disqus_thread
  width: 500px
  margin: 4px auto
  padding-top: 32px
  border-top: 1px solid #e0e0e0




@media only screen and (max-width: 500px)
  body, html
    width: 100%

  header, section, #disqus_thread
    width: 100%
    padding-left: 16px
    padding-right: 16px
    box-sizing: border-box

  .download a
    margin: 10px 0 0 0
    width: 100%
    box-sizing: border-box
